@model List<HelloMVC.Models.Discussion>

@{
    ViewData["Title"] = "NHL Discussion Forum";
}

<h2>Discussion Forum</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Content</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var discussion in Model)
        {
            <tr>
                <td>@discussion.Title</td>
                <td>@discussion.Content</td>
                <td>
                    @if (!string.IsNullOrEmpty(discussion.ImageFilename))
                    {
                        <img src="~/images/@discussion.ImageFilename" alt="Discussion Image" width="100" />
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
