@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-5">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="form-data">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <!-- Name -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Name" class="form-control" placeholder="Your Name" />
                <label asp-for="Input.Name">Name</label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>

            <!-- Location -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Location" class="form-control" placeholder="Your Location" />
                <label asp-for="Input.Location">Location</label>
                <span asp-validation-for="Input.Location" class="text-danger"></span>
            </div>

            <!-- Profile Picture -->
            <div class="mb-3">
                <label asp-for="Input.ImageFile" class="form-label"></label>
                <input asp-for="Input.ImageFile" type="file" class="form-control" />
                <span asp-validation-for="Input.ImageFile" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- Confirm Password -->
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="confirm password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
